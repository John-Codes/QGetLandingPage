  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-sm">
    <nav class="flex flex-col px-4 py-2 space-y-2">
      <a href="/" class="text-black font-bold hover:text-blue-600 py-2 border-b border-gray-100">Home</a>
      <a href="#features" class="text-black font-bold hover:text-blue-600 py-2 border-b border-gray-100">Features</a>
